<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ws_action_item_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ws_action_item_icon_background"
        android:importantForAccessibility="no"
        android:padding="@dimen/list_icon_padding"
        android:scaleType="fitCenter"
        android:tint="?android:attr/colorBackground"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_remote_touchpad_24" />

    <TextView
        android:id="@+id/title"
        style="@style/WsWearableActionDrawerItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_icon_text_margin"
        tools:text="Remote title" />


</LinearLayout>